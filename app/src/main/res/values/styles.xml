<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="fontFamily">@font/poppins</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DebugText" parent="Widget.AppCompat.Button.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Facebook.Button.Feed" parent="android:Widget">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="DimmedTextButton" parent="Facebook.Button.Feed">
        <item name="android:textColor">#e5e5e5</item>
    </style>

    <style name="Toro.Dialog.Fullscreen" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="Toro.Dialog.Fullscreen.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toro.Theme.Board" parent="Toro.Dialog.Fullscreen.NoTitle">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <integer name="grid_span">1</integer>
    <string name="layout_manager">GridLayoutManager</string>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme for the custom activity -->
    <style name="AppTheme.NoActionBar.Translucent">

    </style>

    <style name="AppTheme.Custom" parent="AppTheme.NoActionBar.Translucent"></style>
</resources>
